  {
    "id": "real_life_ownership_advanced_001",
    "stage": "real_life",
    "category": "behavioral",
    "role": "any",
    "level": "mid",
    "skill": "accountability",
    "difficulty": 4,
    "weight": 1.8,
    "expected_duration_sec": 180,
    "question": "Production is down due to your code and you're on-call. What do you do? Walk me through your exact steps.",
    "ideal_points": [
      "Immediate impact assessment (how many users affected?)",
      "Quick communication (notify team, manager, customers)",
      "Investigate and isolate the problem immediately",
      "Deploy fix (rollback or hotfix)",
      "Verify the fix works",
      "Monitor to ensure stability",
      "Schedule postmortem analysis",
      "Document lessons learned",
      "Implement prevention measures"
    ],
    "evaluation_rubric": {
      "composure": "Stays calm under pressure",
      "speed": "Takes quick action",
      "communication": {
        "description": "Communicates proactively",
        "weight": 0.2
      },
      "accountability": "Takes full responsibility",
      "learning": "Plans to prevent recurrence"
    },
    "strong_signals": [
      "Immediate communication over blame",
      "Clear incident management process",
      "Mentions runbook/playbook",
      "Discusses postmortem blameless approach",
      "Shows experience from real incidents"
    ],
    "weak_signals": [
      "Long deliberation before action",
      "Only focuses on fix, not communication",
      "No postmortem mention"
    ],
    "red_flags": [
      "Blames others for the incident",
      "Hides the problem initially",
      "No communication plan",
      "Defensive about code quality",
      "Cannot recall actual incident (suggests never happened)",
      "Panics or freezes up"
    ],
    "follow_ups": [
      "How do you prevent the same bug?",
      "What was your worst on-call incident?"
    ],
    "priority": "core",
    "interviewer_goal": "assess soft skills and maturity",
    "prerequisite_difficulty": 3
  },
